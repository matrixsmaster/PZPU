MCU = attiny85p

CC = avr-gcc
CCFLAGS = -std=c99 -Os -Wall -mmcu=$(MCU) -Wextra -I. -Iavr -Iavr/tiny -DEMBED_AVR=1
LDFLAGS = -mmcu=$(MCU) -Wl,--gc-sections
APP = pzpu_attiny

#OBJS = debug.o ram.o avr/tiny/ram_atmega.o io.o pzpu.o avr/tiny/sd_raw.o avr/avr_io.o avr/tiny/lcd_library.o avr/tiny/avrmain.o

all: $(APP).hex

$(APP).hex: $(APP).elf
	avr-objcopy -j .text -j .data -O ihex $(APP).elf $(APP).hex

$(APP).elf: $(OBJS)
	$(CC) $(LDFLAGS) -o $(APP).elf $(OBJS)
	avr-size -A $(APP).elf

%.o: %.c
	$(CC) $(CCFLAGS) -c $< -o $@

.PHONY: clean
clean:
	rm -f *.o $(APP).hex $(APP).elf
