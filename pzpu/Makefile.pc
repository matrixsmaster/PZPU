CC = gcc
CCFLAGS = -O2 -g -Wall -Wextra
LDFLAGS = 
APP = pzpu

MODE = -DRAM_OS_ENABLED=1 -DPZPU_IOINTERACT=1 -DDEBUG_OS_ENABLED=1

OBJS = debug.o ram.o ram_pc.o io.o io_pc.o pzpu.o main.o

all: $(APP)

$(APP): $(OBJS)
	$(CC) $(LDFLAGS) -o $(APP) $(OBJS)

%.o: %.c
	$(CC) $(CCFLAGS) $(MODE) -c $< -o $@

.PHONY: clean
clean:
	rm -f *.o $(APP)
